{
    "log_file": "/etc/vanilla/installer.log",
    "distro_name": "PikaOS",
    "distro_logo": "pika-logo",
    "image_type": "unsquashfs",
    "images": {
    		"default": "/cdrom/casper/filesystem.squashfs"
    },
    "default_root_size": 35000,
    "min_disk_size": 45000,
    "tour": {
        "welcome": {
            "resource": "/org/vanillaos/Installer/assets/welcome.svg",
            "title": "Welcome to PikaOS",
            "description": "Let's make Ubuntu Great Again."
       },
       "control": {
           "resource": "/org/vanillaos/Installer/assets/patch.svg",
           "title": "PikaOS Patching",
           "description": "Updated and patched to provide best possible desktop experience."
       },
       "containerized": {
           "resource": "/org/vanillaos/Installer/assets/pikman.svg",
           "title": "Pikman",
           "description": "the Pikman package manager allows you to install native system packages and Flatpak alongside many APX containers."
       },
       "completed": {
           "resource": "/org/vanillaos/Installer/assets/rolling.svg",
           "title": "A Stable Rolling Release",
           "description": "PikaOS is rolling release Distro which will not fail you."
       }
    },
    "steps": {
        "welcome": {
            "template": "welcome"
        },
        "language": {
            "template": "language"
        },
        "keyboard": {
            "template": "keyboard"
        },
        "timezone": {
            "template": "timezone"
        },
        "disk": {
            "template": "disk"
        },
        "encryption": {
            "template": "encryption"
        }
    }
}
